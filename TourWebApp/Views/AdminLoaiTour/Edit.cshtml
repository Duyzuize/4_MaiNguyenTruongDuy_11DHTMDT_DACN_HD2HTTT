@model TourWebApp.Data.Models.LoaiTour

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Sửa loại tour";
}

<h3 class="fw-bold mb-3">✏️ Sửa loại tour</h3>

<form asp-action="Edit" method="post" class="card shadow-sm border-0">
    <div class="card-body">
        <input type="hidden" asp-for="IdLoaiTour" />

        <div class="mb-3">
            <label class="form-label fw-semibold">Tên loại</label>
            <input asp-for="TenLoai" class="form-control" />
            <span asp-validation-for="TenLoai" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Mô tả</label>
            <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-primary">Cập nhật</button>
            <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
        </div>
    </div>
</form>
