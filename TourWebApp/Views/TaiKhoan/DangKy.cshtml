@{
ViewData["Title"] = "Đăng ký";
}


<link rel="stylesheet" href="~/css/auth.css" />


<div class="auth-bg">
<div class="auth-container">
<div class="auth-box">


<h2>Tạo tài khoản mới</h2>
<p>Đăng ký để trải nghiệm cùng HappyTrip</p>


@if (ViewBag.ThongBao != null)
{
<div class="error-text">@ViewBag.ThongBao</div>
}


<form method="post" action="/TaiKhoan/DangKy" onsubmit="return validatePassword()">


<div class="form-group">
<input type="text" name="HoTen" placeholder="Họ và tên" required />
</div>


<div class="form-group">
<input type="email" name="Email" placeholder="Email (gmail hoặc happydulich.vn)" required />
</div>


<!-- MẬT KHẨU -->
<div class="form-group password-wrapper">
<input type="password" id="MatKhau" name="MatKhau" placeholder="Mật khẩu" required />
<span class="toggle-password" onclick="togglePassword('MatKhau', this)">
<i class="fas fa-eye"></i>
</span>
</div>
<small id="passwordHelp"></small>


<!-- NHẬP LẠI MẬT KHẨU -->
<div class="form-group password-wrapper">
<input type="password" id="MatKhauNhapLai" name="MatKhauNhapLai" placeholder="Nhập lại mật khẩu" required />
<span class="toggle-password" onclick="togglePassword('MatKhauNhapLai', this)">
<i class="fas fa-eye"></i>
</span>
</div>


<button class="btn-login">ĐĂNG KÝ</button>


<div class="register-link">
Đã có tài khoản?
<a href="/TaiKhoan/DangNhap">Đăng nhập</a>
</div>
</form>


</div>
</div>
</div>


<script src="~/js/password-validation.js"></script>