@model TourWebApp.Data.Models.ChuyenMucBaiViet

@{
    ViewData["Title"] = "Sửa chuyên mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 class="fw-bold mb-4">
    <i class="fa-solid fa-pen me-2"></i> Sửa chuyên mục
</h3>

<form asp-action="Edit" method="post" class="card p-4 shadow-sm">

    <input type="hidden" asp-for="IdCM" />

    <div class="mb-3">
        <label class="form-label fw-bold">Tên chuyên mục</label>
        <input asp-for="TenCM" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Mô tả</label>
        <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-check mb-3">
        <input asp-for="TrangThai" class="form-check-input" />
        <label class="form-check-label">
            Hiển thị chuyên mục
        </label>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary px-4 me-2">
            <i class="fa-solid fa-save me-1"></i> Cập nhật
        </button>

        <a href="/QuanLyChuyenMuc" class="btn btn-secondary px-4">
            <i class="fa-solid fa-arrow-left me-1"></i> Quay lại
        </a>
    </div>
</form>
