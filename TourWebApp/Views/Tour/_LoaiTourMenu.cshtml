@model IEnumerable<TourWebApp.Data.Models.LoaiTour>

@{
    // Lấy id loại tour hiện tại (nếu đang ở trang theo loại)
    int activeId = 0;
    if (Context.Request.RouteValues["action"]?.ToString() == "TheoLoai")
    {
        int.TryParse(Context.Request.RouteValues["id"]?.ToString(), out activeId);
    }
}

<ul class="dropdown-menu shadow border-0 rounded-4 py-2">

    @foreach (var loai in Model)
    {
        bool isActive = loai.IdLoaiTour == activeId;

        <li>
            <a class="dropdown-item d-flex justify-content-between align-items-center 
                       @(isActive ? "text-primary fw-bold" : "")"
               asp-controller="Tour"
               asp-action="TheoLoai"
               asp-route-id="@loai.IdLoaiTour">

                @loai.TenLoai

                <!-- Icon mũi tên -->
                <span style="font-size: 14px; opacity: .7;">›</span>
            </a>
        </li>

        <!-- Gạch phân cách -->
        <li><hr class="dropdown-divider"></li>
    }
</ul>
