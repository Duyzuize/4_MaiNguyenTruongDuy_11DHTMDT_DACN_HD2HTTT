<!-- TOUR NỔI BẬT -->
<section class="home-section bg-light">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="section-title mb-0">Tour nổi bật</h2>
            <a asp-controller="Tour" asp-action="TatCa" class="small text-primary fw-semibold">
                Xem tất cả tour →
            </a>
        </div>

        <div class="row">
    @foreach (var tour in ViewBag.TourNoiBat)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">

                <img src="~/img/tours/@tour.HinhAnh"
                     class="card-img-top"
                     style="height:220px; object-fit:cover" />

                <div class="card-body">
                    <h5 class="fw-bold">@tour.TenTour</h5>
                    <p class="text-muted">@tour.DiaDiem</p>

                    <p>
                        @if (tour.PhanTramGiam > 0)
                        {
                            <span class="text-muted text-decoration-line-through">
                                @String.Format("{0:N0}đ", tour.GiaGoc)
                            </span>
                        }
                        <span class="fw-bold text-danger ms-2">
                            @String.Format("{0:N0}đ", tour.GiaKhuyenMai)
                        </span>
                    </p>

                    <a asp-controller="Tour"
                       asp-action="ChiTiet"
                       asp-route-id="@tour.IdTour"
                       class="btn btn-primary w-100">
                        Xem chi tiết
                    </a>
                </div>
            </div>
        </div>
    }
</div>

    </div>
</section>



